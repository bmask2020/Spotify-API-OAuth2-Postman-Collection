		{
			"name": "Create Playlist",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Test that status code is 201 (Created)",
							"pm.test(\"Status code is 201 (Created)\", function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"",
							"// Parse response JSON",
							"var jsonData = pm.response.json();",
							"",
							"// Test that playlist name matches request",
							"pm.test(\"Playlist name matches request\", function () {",
							"    pm.expect(jsonData.name).to.eql(\"Khaled Mahmoud Test Playlist\");",
							"});",
							"",
							"// Test that playlist description matches request",
							"pm.test(\"Playlist description matches request\", function () {",
							"    pm.expect(jsonData.description).to.eql(\"Khaled Mahmoud Testing Playlist\");",
							"});",
							"",
							"// Test that playlist public status matches request",
							"pm.test(\"Playlist public status matches request\", function () {",
							"    pm.expect(jsonData.public).to.eql(false);",
							"});",
							"",
							"// Test that response JSON has expected structure",
							"pm.test(\"Response has expected keys\", function () {",
							"    pm.expect(jsonData).to.have.property(\"id\");",
							"    pm.expect(jsonData).to.have.property(\"name\");",
							"    pm.expect(jsonData).to.have.property(\"description\");",
							"    pm.expect(jsonData).to.have.property(\"public\");",
							"    pm.expect(jsonData).to.have.property(\"tracks\");",
							"});",
							""
						],
